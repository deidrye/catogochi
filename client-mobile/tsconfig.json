{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "types": ["@react-navigation/native"],
    "module": "esnext",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "jsx": "react-native",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "esModuleInterop": true
  },
  "include": ["**/*.ts", "**/*.tsx"]
}
